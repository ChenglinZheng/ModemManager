+int
+main (int argc, char *argv[])
+{
+	//const char *udi = "/org/freedesktop/Hal/devices/usb_device_12d1_1003_noserial_if0_serial_usb_0";
+	AppData *app_data;
+
+	if (argc != 2) {
+		g_print ("Usage: %s <udi>\n", argv[0]);
+		return 1;
+	}
+
+	gtk_init (&argc, &argv);
+
