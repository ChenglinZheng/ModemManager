+typedef struct {
+	/* UI */
+	GladeXML *glade_xml;
+	GtkDialog *main_dialog;
+	GtkTreeView *network_list;
+	GtkListStore *network_store;
+	GtkWidget *scan_button;
+	GtkWidget *create_net_button;
+
